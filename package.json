{
  "name": "homeos",
  "private": true,
  "version": "0.1.0",
  "description": "iOS-first family AI assistant with agentic capabilities and Temporal durable execution",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:services": "turbo run dev --filter='./services/*'",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @homeos/shared run db:generate",
    "db:migrate": "pnpm --filter @homeos/shared run db:migrate",
    "db:studio": "pnpm --filter @homeos/shared run db:studio"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.3"
  }
}
