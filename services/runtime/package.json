    "@fastify/websocket": "^11.0.1",
    "@homeos/shared": "workspace:*",
    "@temporalio/client": "^1.11.6",
    "fastify": "^5.1.0",
    "ioredis": "^5.4.1",
    "minio": "^8.0.2",
    "pg": "^8.13.1",
    "pgvector": "^0.2.0",
    "pino": "^9.5.0",
    "ws": "^8.19.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.18.1",
